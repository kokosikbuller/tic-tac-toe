generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id          String      @id @default(cuid())
  status      GameSatus
  players     User[]      @relation("games")
  field       Json?
  winner      User?       @relation(fields: [winnerId], references: [id])
  winnerId    String? 
  gameOverAt  String?
}

enum GameSatus {
  idle
  inProgress
  gameOver
  gameOverDraw
}

model User {
  id            String     @id @default(cuid())
  login         String
  rating        Int
  passwordHash  String
  salt          String      @default("")
  games         Game[]      @relation("games")
  winnerGames   Game[]
}
